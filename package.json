{
  "name": "evofuse2048",
  "private": true,
  "version": "1.1.0",
  "main": "electron/main.js",
  "type": "module",
  "description": "King Over Road",
  "author": "King Over Road",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "start": "react-scripts start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron": "electron .",
    "electron-build": "tsc -b && vite build && electron-builder"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@clerk/clerk-react": "^5.24.1",
    "@fontsource/cinzel-decorative": "^5.2.5",
    "@fontsource/patrick-hand": "^5.2.5",
    "adm-zip": "^0.5.16",
    "axios": "^1.8.3",
    "bip39": "^3.1.0",
    "electron-is-dev": "^3.0.1",
    "ethers": "^6.13.5",
    "framer-motion": "^12.4.10",
    "motion": "^12.4.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-icons": "^5.5.0",
    "react-image-crop": "^11.0.10",
    "react-router-dom": "^7.2.0",
    "react-toastify": "^11.0.5",
    "request": "^2.88.2",
    "styled-components": "^6.1.15",
    "styled-normalize": "^8.1.1",
    "tree-kill": "^1.2.2",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "10.4.18",
    "concurrently": "^9.1.2",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "ts-jest": "^29.3.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.evofuse2048.app",
    "productName": "EvoFuse2048",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "icon": "electron/icon.ico",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
